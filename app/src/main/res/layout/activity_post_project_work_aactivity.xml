<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostProject_WorkA_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostProject_WorkA_Activity">

        <ImageView
            android:id="@+id/imgPostProject_WA"
            android:layout_width="132dp"
            android:layout_height="92dp"
            android:layout_marginStart="139dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="67dp"
            app:layout_constraintBottom_toTopOf="@+id/txtPostProject_WA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo" />

        <TextView
            android:id="@+id/txtPostProject_WA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="167dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="167dp"
            android:layout_marginBottom="63dp"
            android:text="Post Project (Working Alone)"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnReviewWorking_WA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnReviewWorking_WA"
            android:layout_width="407dp"
            android:layout_height="69dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/purple_700"
            android:text="Review/Revise Working Alone/Journey"
            app:layout_constraintBottom_toTopOf="@+id/btnHSE_Docum_WA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPostProject_WA" />

        <Button
            android:id="@+id/btnHSE_Docum_WA"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/purple_700"
            android:text="HSE Documentation to be Updated"
            app:layout_constraintBottom_toTopOf="@+id/btnBack4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReviewWorking_WA" />

        <Button
            android:id="@+id/btnBack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="158dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="154dp"
            android:text="Back"
            app:icon="?attr/actionModeCloseDrawable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnHSE_Docum_WA" />

        <TextView
            android:id="@+id/txtPostProject_WA1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="177dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="176dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            android:text="Forms"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnReviewWorking_WA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPostProject_WA" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>