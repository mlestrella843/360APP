<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workingAloneActivity">

    <Button
        android:id="@+id/btnCategPostProject"
        android:layout_width="405dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="1dp"
        android:onClick="goToPostProjectWorkingAlone"
        android:text="Post Project"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategThroughout" />

    <ImageView
        android:id="@+id/imgWorkingAlone_Pg"
        android:layout_width="125dp"
        android:layout_height="113dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/txtViewWorkingA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/txtViewWorkingA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="30dp"
        android:text="Working Alone (Tasks)"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCategFirstDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgWorkingAlone_Pg" />

    <Button
        android:id="@+id/btnCategFirstDay"
        android:layout_width="406dp"
        android:layout_height="68dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="goToFirstDayWorkingAlone"
        android:text="First Day On Site"
        app:layout_constraintBottom_toTopOf="@+id/btnCategThroughout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewWorkingA" />

    <Button
        android:id="@+id/btnCategThroughout"
        android:layout_width="405dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="@color/purple_200"
        android:onClick="goToThroughoutWorkingAlone"
        android:text="Throughout Project"
        app:layout_constraintBottom_toTopOf="@+id/btnCategPostProject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategFirstDay" />

    <Button
        android:id="@+id/btnBackChooseSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="100dp"
        android:text="Back"
        app:icon="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategPostProject" />

</androidx.constraintlayout.widget.ConstraintLayout>