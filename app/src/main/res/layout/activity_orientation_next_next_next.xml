<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orientation_next_next_next">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_DCofFlammableSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D/C of Flammable Sub"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDate7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_weight="1"
            android:hint="Expire Date:"/>

        <TextView
            android:id="@+id/textView_FallProtection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fall Protection"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDate8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:hint="Expire Date:"/>

        <TextView
            android:id="@+id/textView_GroundDisturbance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ground Disturbance"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDate9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_weight="1"
            android:hint="Expire Date:"/>

        <TextView
            android:id="@+id/textView_ConfinedSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confined Space"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextDate10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:hint="Expire Date:"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="If others, please provide valid proof of certification."
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>