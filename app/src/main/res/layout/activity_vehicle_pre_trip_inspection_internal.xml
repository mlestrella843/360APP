<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".Vehicle_PreTrip_Inspection_Internal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_Horn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horn"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup_Horn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn_HornSatisfactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="SATISFACTORY" />

            <RadioButton
                android:id="@+id/radioBtn_HornDefective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="DEFECTIVE" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText_HornComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_HeaterDefrost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heater/Defrost"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup_HeaterDefrost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn_HeaterDefrostSatisfactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="SATISFACTORY" />

            <RadioButton
                android:id="@+id/radioBtn_HeaterDefrostDefective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="DEFECTIVE" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText_HeaterDefrostComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/textView_ParkingBrake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking Brake"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup_ParkingBrake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn_ParkingBrakeSatisfactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="SATISFACTORY" />

            <RadioButton
                android:id="@+id/radioBtn_ParkingBrakeDefective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="DEFECTIVE" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText_ParkingBrakeComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/textView_Steering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steering"
            android:textSize="28sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup_Steering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtn_SteeringSatisfactory"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:layout_height="wrap_content"
                android:text="SATISFACTORY" />

            <RadioButton
                android:id="@+id/radioBtn_SteeringDefective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:layout_weight="1"
                android:text="DEFECTIVE" />
        </RadioGroup>

        <EditText
            android:id="@+id/editText_SteeringComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/imageBtn_Move5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:minWidth="111dp"
            android:minHeight="51dp"
            android:src="@drawable/ic_action_next"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>