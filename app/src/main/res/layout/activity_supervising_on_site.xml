<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supervisingOnSiteActivity">

    <Button
        android:id="@+id/btnCategPostProjectOnSite"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="40dp"
        android:text="Post Project"
        app:layout_constraintBottom_toTopOf="@+id/button37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategThroughoutOnSite" />

    <Button
        android:id="@+id/btnCategThroughoutOnSite"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/purple_200"
        android:text="Throughout Project"
        app:layout_constraintBottom_toTopOf="@+id/btnCategPostProjectOnSite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategFirstDayOnSite" />


    <ImageView
        android:id="@+id/imgViewSupervising"
        android:layout_width="126dp"
        android:layout_height="99dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="115dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCategFirstDayOnSite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/txtSupervising"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="40dp"
        android:text="Supervising On Site (Tasks)"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCategFirstDayOnSite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCategFirstDayOnSite"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="goToFirstDaySupervising"
        android:text="First Day On Site"
        app:layout_constraintBottom_toTopOf="@+id/btnCategThroughoutOnSite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSupervising" />

    <Button
        android:id="@+id/button37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="90dp"
        android:text="Back"
        app:icon="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCategPostProjectOnSite" />

</androidx.constraintlayout.widget.ConstraintLayout>